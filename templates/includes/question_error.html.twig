<div role='alert'>
    <span id="no-selection" class="govuk-error-message" style="display:{{ errorMessage is defined and showError is defined  ? 'block' : 'none' }}">
        <span class="govuk-visually-hidden">Error:</span>
        {% if  errorMessage is defined %}
            {{ errorMessage|raw }}
        {% endif %}
        {% for errMssg in errorsMessages  %}
            <div class='apiErrorsMsg resetErrors' data-error-type="{{errMssg.failureValidationTypeCode}}">
                {{ errMssg.errorMessage|raw }}
            </div>
        {% endfor %}

    </span>
</div>