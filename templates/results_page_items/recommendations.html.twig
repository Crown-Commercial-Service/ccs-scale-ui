<div class="govuk-accordion" data-module="govuk-accordion" id="accordion-with-summary-sections">
    {% for framework in frameworks %}
    {% if  framework is not empty %}
    <div class="govuk-accordion__section ">
        <div class="govuk-accordion__section-header">
            <div class="govuk-accordion__section-heading">
                <div class="govuk-accordion__section-button" id="accordion-default-heading-{{ loop.index }}">
                    <h3 class="govuk-heading-m">{{ framework.name }}</h3>
                </div>
            </div>
        </div>
        <div id="accordion-with-summary-sections-content-{{ loop.index }}" class="govuk-accordion__section-content">
            <p>
                <strong>Agreement ID:</strong>
                {{ framework.number }}
                <strong>End Date:</strong>
                {{ framework.endDate|date("d/m/Y") }}
            </p>

            <div class="framework-description" style="font-family: Source Sans Pro">{{ framework.description|raw }}</div>
           
            <div>
                {% if framework.lots is defined %}
                    {% include "/results_page_items/lots.html.twig" %}
                {% endif %}
            </div>

            <br>
            <span class='hidden_msgs' id="new-window-{{ loop.index }}">{{ framework.name }} Open in a new tab</span>
            <a  target="_blank" class='view-framework-details-ulr govuk-button govuk-button--secondary'
            aria-describedby="new-window-{{ loop.index }}" data-module="govuk-button"
            href="https://www.crowncommercial.gov.uk/agreements/{{ framework.number }}">Read agreement details</a>
        
        </div>
</div>
{% endif %}
{% endfor %}
</div>