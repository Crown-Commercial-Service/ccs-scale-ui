{% extends 'base.html.twig' %}

{% block title %} Guided Match Journey - searched for {{searchBy}}  - {{pageTitle}}{% endblock %}

{% block header %}
    {% embed '/includes/header.html.twig' %}
        {% block bannerarea %}{% endblock %}
    {% endembed %}
{% endblock %}

{% block body %}
    <div class="--govuk-width-container">
        <div class="govuk-width-container">
            {{ include('includes/phase_banner.html.twig') }}
             <span class='hidden_msgs' id="back-to_prev"> to previous question</span>
            <a 
            aria-describedby="back-to_prev"
            href="{{ 
                path( 
                    'back-to-previous',
                    {
                        'journeyId': journeyId,
                        'journeyInstanceId': journeyInstanceId,
                        'questionUuid': lastQuestionId,
                        'journeyHistory': journeyHistory, 
                        'gPage': lastPage,
                    }
                    )}}?q={{ searchByEncoded }}"
                    onclick="back();"
                class="govuk-back-link">Back</a>

            <main class="govuk-main-wrapper restrict-width" id="main-content">
             
                    <div class="govuk-grid-row ">
                        <h1 class="govuk-heading-xl page-title govuk-!-margin-bottom-5">We need more information to help you</h1>
                        <p class="govuk-body-l">Our customer service team can help you gather the right information to start procurement, even if you have complex needs.</p>

                        <a href="https://www.crowncommercial.gov.uk/contact" role="button" 
                        class="govuk-button  govuk-!-margin-bottom-4" data-module="govuk-button">Contact CCS</a>

                        <p>
                            It can help to keep a record of your answers to share with us so we can understand what framework is best for you.
                             Our customer service team can't see what you have answered here so print or download your answers before calling.
                         </p>  
                        {% include "/results_page_items/answers.html.twig" with {'lotstTitle': '', 'changeAnswer':''} %}
                    </div>

                     {% include "/includes/print-page.html.twig" %}

                    <p class="govuk-body">Need help with this service? 
                        <a 
                        aria-describedby="contact-ccs-intermediar-page"
                        href="{{ 
                        path( 
                            'contact-ccs-page',
                            {
                                'journeyId': journeyId,
                                'journeyInstanceId': journeyInstanceId,
                                'questionUuid': 0,
                                'journeyHistory': journeyHistory, 
                                'gPage': lastPage,

                            }
                            )}}?q={{ searchBy|url_encode }}"
                            onclick="contact();"
                        >Contact CCS</a></p>


                     {% include "/includes/start_change_answers_btn.html.twig" %}
             
            </main>
        </div>
    </div>
{% endblock %}