{% extends 'base.html.twig' %}

{% block title %} Guided Match Journey - searched for {{searchBy}}  - {{pageTitle}}{% endblock %}

{% block header %}
    {% embed '/includes/header.html.twig' %}
        {% block bannerarea %}{% endblock %}
    {% endembed %}
{% endblock %}

{% block body %}
    <!-- required wrapper 1 -->
    <div class="govuk-width-container">
        {% include "/includes/phase_banner.html.twig" %}

        
        <span class='hidden_msgs' id="back-to-search-result"> to start journey</span>
        <a aria-describedby="back-to-search-result" class="govuk-back-link" href="/find-a-commercial-agreement/landing-page?q={{ searchBy|url_encode }}">Back</a>

        <!-- required wrapper 2 -->
        <main class="govuk-main-wrapper questions-page" id="main-content">
            <div class="govuk-grid-row restrict-width">

                <form action="#" onsubmit="return validate()" name="question" method="post">
                    {% include"/includes/question_error_summary.html.twig" %}
                    <div class="govuk-form-group {{ errorMessage is defined and showError is defined ? 'govuk-form-group--error' }}" id="form-layout">
                        <fieldset class="govuk-fieldset">
                            <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                                <h1 class="govuk-fieldset__heading">
                                    Select which area suits your requirements
                                </h1>
                            </legend>
                            <div role="complementary">
                                <div id="changed-name-hint" class="govuk-hint">
                                    <p>You have searched for {{ searchBy }}. 
                                    There is more than one area that could include {{ searchBy }}.</p>
                                    <p>Select the option which best suits your requirements. </p>
                                </div>
                            </div>
                           
                            {% include "/includes/question_error.html.twig" %}                           

                                <div class="govuk-radios">
                                    {% for journey in journeys %}

                                        {% set checked = '' %}
                                      
                                          {% if journeyId == journey.journeyId  %}
                                            {% set checked = 'checked = checked' %}
                                          {% endif %}

                                        <div class="govuk-radios__item">
                                            <input class="govuk-radios__input v-selector" id="{{ journey.journeyId }}-{{loop.index}}" name="uuid" type="radio"
                                                value="{{ journey.journeyId }}" aria-describedby="{{journey.journeyId}}-{{loop.index}}" >
                                            <label class="govuk-label govuk-radios__label govuk-label--s" for="{{journey.journeyId }}-{{loop.index}}">
                                                {{- journey.selectionText -}}
                                            </label>
                                            {% if journey.selectionDescription is defined  and journey.selectionDescription  is not empty %}
                                                <span id="{{journey.journeyId}}-{{loop.index}}" class="govuk-hint govuk-radios__hint">{{- journey.selectionDescription|raw -}}</span>
                                            {% endif %}
                                        </div>
                                    {% endfor %}
                                    <input type='hidden' name='form-type' value='boolean'>
                                    <input type='hidden' name='searchBy' value='{{ searchBy }}'>
                                </div>
                        </fieldset>
                    </div>
                 
                    <input type="hidden" name="token" value="{{ csrf_token('save-answers') }}"/>

                    <button class="govuk-button" data-module="govuk-button" type="submit">
                        Continue
                    </button>
                </form>

                <span class='hidden_msgs' id="contact-ccs-intermediar-page">Contact CCS - intermediar page</span>

                <p class="govuk-body">Need help with this service? 
                <a 
                 aria-describedby="contact-ccs-intermediar-page"
                href="{{ 
                path( 'contact-ccs-page-journeys')}}?q={{ searchBy|url_encode }}"
               >Contact CCS</a></p>
            </div>
        </main>
    </div>
{% endblock %}
{% block script %}
    {{ parent() }}
    <script src="{{ asset('find-a-commercial-agreement/scripts/question_types_validators.js') }}" ></script>
{% endblock %}
